<!DOCTYPE html>
<html>
  <head>
    <title>MoodTrackRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_include_tag "//www.google.com/jsapi" %>
     <%= javascript_include_tag 'application', "chartkick", 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
          </a>
        </div>
        <ul class="nav navbar-nav">

          <% if current_user %>
            <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>

          <% else %>
            <li><%= link_to "Sign In", user_session_path, id: 'signin' %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% end %>

        </ul>
        <% if current_user %>
          <p class="navbar-text navbar-right nav_user">Signed in as <a href="#" class="navbar-link"><%= current_user.email %></a></p>
        <% else %>
          <p class="navbar-text navbar-right nav_user">Not Logged In</p>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
